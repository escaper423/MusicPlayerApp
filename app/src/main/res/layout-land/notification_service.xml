<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_red"
    android:layout_gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_music_basic" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/notification_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/notification_artist"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/notification_title"
        android:layout_toEndOf="@id/notification_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Artist"

        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/notification_prev"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/notification_title"
        android:scaleType="fitXY"
        android:src="@drawable/ic_skip_previous_black_24dp"
        android:tint="@android:color/white" />

    <ImageView
        android:id="@+id/notification_play"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@id/notification_prev"
        android:scaleType="fitXY"
        android:src="@drawable/ic_pause_black_24dp"
        android:tint="@android:color/white" />

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/notification_play"
        android:scaleType="fitXY"
        android:src="@drawable/ic_skip_next_black_24dp"
        android:tint="@android:color/white" />

    <ImageView
        android:id="@+id/notification_end"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close_black_24dp" />

</RelativeLayout>